<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.PriceWiseAndroidApp" parent="android:Theme.Material.Light.NoActionBar" />
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation duration. -->
        <item name="windowSplashScreenBackground">@android:color/white</item>

        <!-- Use windowSplashScreenAnimatedIcon to add a drawable or an animated
             drawable. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item> <!-- Example: use your app's icon -->

        <!-- Set the theme of the Activity that follows your splash screen. -->
        <!-- This is required -->
        <item name="postSplashScreenTheme">@style/Theme.PriceWiseAndroidApp</item>
    </style>
</resources>